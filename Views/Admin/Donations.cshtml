@model IEnumerable<WebApplication1.crudDonateResult>

@{
    ViewBag.Title = "Donations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Donations</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.verification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.verification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.ActionLink("Verify / Edit", "DonationsEdit", new {  id=item.ID })
        </td>
    </tr>
}

</table>
